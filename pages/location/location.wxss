Page {
  background: #f2f2f1;
  width: 100%;
  height: 100%;
}

.main-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.topbar {
  background: #c00000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 0 24rpx;
  font-size: 32rpx;
  height: 13vh;
}

.topbar text {
  color: #fff;
}

.search-item {
  display: flex;
  flex-direction: row;
  height: 64rpx;
  border-radius: 32rpx;
  background: #fff;
  margin: 0 32rpx 0 32rpx;
}

.search-bar {
  width: 100%;
}

.search-item input {
  padding: 0 16rpx 0 16rpx;
  align-self: center;
  font-size: 32rpx;
}

.search-item icon {
  align-self: center;
  margin-left: 20rpx;
}

.text-radio {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  font-size: 36rpx;
}

.text-radio .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.text-radio .nav-item .mark{
  width: 100%;
  background: #fddda6;
  height: 10rpx;
}

.content-view {
  width: 100%;
  height: 87vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
}

.content-view .city-list-item {
  border-bottom: 1rpx solid rgba(166, 164, 164, 0.25);
  font-size: 32rpx;
  margin: 0 80rpx 0 48rpx;
  padding: 16rpx 0 16rpx 0;
}

.content-view .catalog-item {
  color: #848383;
  font-size: 32rpx;
  margin: 0 80rpx 0 48rpx;
}

.current-city {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  border-bottom: 1rpx solid rgba(166, 164, 164, 0.25);
  margin: 0 80rpx 0 48rpx;
  padding: 32rpx 0 32rpx 0;
}

.current-city image {
  width: 48rpx;
  height: 48rpx;
}

.current-city .city-name {
  font-size: 42rpx;
  padding-left: 12rpx;
}

.current-city .remark {
  font-size: 26rpx;
  padding-left: 20rpx;
  color: #848383;
}

.hot-cities-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0 80rpx 0 48rpx;
  padding: 32rpx 0 32rpx 0;
}

.hot-cities {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}

.hot-cities .hot-city-text{
  font-size: 32rpx;
  border: 1rpx solid #bbbbbb;
  padding: 12rpx 60rpx 12rpx 60rpx;
  margin: 12rpx 0 12rpx 0
}

.hot-cities-container .remark {
  font-size: 26rpx;
  color: #848383;
}

.scroll-list {
  position: absolute;
  top: 16vh;
  right: 10rpx;
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  color: #3e3d3d;
  font-size: 28rpx; 
}
