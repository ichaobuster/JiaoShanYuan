
.index-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.topbar {
  background: #c00000;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 12rpx 24rpx 0 24rpx;
  font-size: 32rpx;
  height: 8vh;
}

.topbar .topbar-items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.topbar .subitem {
  display: flex;
  align-items: center;
  justify-content: center;
}

.topbar text {
  color: #fff;
}

.topbar image {
  width: 48rpx;
  height: 48rpx;
}

.search-item {
  width: 50vw;
  display: flex;
  flex: auto;
  flex-direction: row;
  height: 64rpx;
  border-radius: 32rpx;
  background: #fff;
  margin: 0 32rpx 0 32rpx;
}

.search-item input {
  padding: 0 16rpx 0 16rpx;
  align-self: center;
  font-size: 32rpx;
}

.search-item icon {
  align-self: center;
  margin-left: 20rpx;
}

.content-view {
  width: 100%;
  height: 92vh;
}

swiper {
  width: 100%;
  height: 50vw;
}

swiper image {
  width: 100%;
  height: 100%;
}

.filter-bar {
  display: flex;
  flex-direction: row;
}

.filter-bar button {
  border-radius: 0;
  border-top-width: 0;
  border-right-width: 0;
  border-bottom-width: 1rpx;
  border-left-width: 0;
  font-size: 32rpx;
  flex: auto;
}

.filter-bar button::after {
  border-radius: 0;
  border-top-width: 0;
  border-right-width: 0;
  border-bottom-width: 1rpx;
  border-left-width: 0;
}

.detail-items {
  display: flex;
  flex-direction: column;
  height: 100%;
} 

.detail-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 0 32rpx;
  font-size: 32rpx;
}

.detail-container image {
  width: 240rpx;
  height: 240rpx;
}

.detail-container .detail-info {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 32rpx 0 32rpx;
}

.detail-container .detail-info .detail-name {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.detail-container .detail-info .hot-text {
  background-color: #ffd500;
  font-size: 28rpx;
  padding: 0 8rpx 0 8rpx;
  margin-right: 24rpx;
}

.detail-container .detail-info .detail-stars {
  padding: 12rpx 0 12rpx 0;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
}

.detail-container .detail-info .detail-stars-score {
  color: #ff9540;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.star-one {
  color: #ff9540;
  font-size: 28rpx;
}

.star-zero {
  color: #aaaaaa;
  font-size: 28rpx;
}

.detail-container .detail-info .detail-location {
  padding: 12rpx 0 0 0;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.location-name {
  color: #666666;
}

.location-distance {
  color: #40aeff;
}

.detail-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0 28rpx 0;
  border-top: 1rpx solid rgba(164, 164, 164, 0.25);
  border-bottom: 1rpx solid rgba(164, 164, 164, 0.25);
}

.detail-buttons button{
  font-size: 28rpx;
  border: 0;
  color: #fff;
  background-color: #ff685a;
}

.detail-buttons button::after{
  border: 0;
}

.detail-button-hover {
  font-size: 28rpx;
  border: 0;
  color: #fff;
  background-color: #ff2916;
}
